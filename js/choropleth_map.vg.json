{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Unemployment Rates in Australia by State (1978-2024)",
    "font": "Arial",
    "fontSize": 16,
    "anchor": "middle",
    "color": "#333"
  },
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 1998,
      "bind": {
        "input": "range",
        "min": 1978,
        "max": 2024,
        "step": 1,
        "name": "Select Year: ",
        "labelFont": "Arial",
        "labelFontSize": 12
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sssskipjack/Unemployment-Rate-Australia-Visualization/main/js/georef-australia-state-millesime.json",
        "format": {
          "type": "topojson",
          "feature": "georef-australia-state-millesime"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "properties.ste_name",
          "type": "nominal",
          "title": "State"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/sssskipjack/Unemployment-Rate-Australia-Visualization/refs/heads/main/data/unemploymentRateTimeSeries.csv",
        "format": {"type": "csv"}
      },
    "transform": [
      {"calculate": "year(datum.Date)", "as": "year"},
      {"filter": "datum.year == Year_selection"},
      {
        "lookup": "State",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/sssskipjack/Unemployment-Rate-Australia-Visualization/main/js/georef-australia-state-millesime.json",
            "format": {
              "type": "topojson",
              "feature": "georef-australia-state-millesime"
            }
          },
          "key": "properties.ste_iso3166"
        },
        "as": "geo"
      }
    ],

      "mark": {"type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Unemployment Rate",
          "title": "Unemployment Rate (%)",
          "type": "quantitative",
          "scale": {
            "domain": [0, 15],
            "scheme": "reds"
          },
          "legend": {
            "titleFont": "Arial",
            "titleFontSize": 14,
            "labelFont": "Arial",
            "labelFontSize": 12,
            "labelColor": "#333"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {
            "field": "Unemployment Rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)",
            "format": ".1f"
          },
          {"field": "year", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"Date": "1983-03-01", "Event": "1983 Recession"},
          {"Date": "1990-01-01", "Event": "Early 1990s Recession"},
          {"Date": "2000-09-15", "Event": "Sydney Olympics"},
          {"Date": "2008-09-15", "Event": "Global Financial Crisis"},
          {"Date": "2020-03-01", "Event": "COVID-19 Pandemic"}
        ]
      },
      "transform": [
        {"calculate": "year(datum.Date)", "as": "event_year"},
        {"filter": "datum.event_year == Year_selection"}
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 10,
        "dy": 10,
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#333",
        "angle": 0,
        "tooltip": null,
        "background": {
          "fill": "#f9f9f9",
          "stroke": "#ccc",
          "strokeWidth": 1,
          "cornerRadius": 4
        },
        "padding": 5
      },
      "encoding": {
        "x": {"value": 20},
        "y": {"value": 20},
        "text": {"field": "Event", "type": "nominal"}
      }
    }
  ],
  "config": {
    "title": {"font": "Arial", "fontSize": 16, "color": "#333"},
    "axis": {
      "labelFont": "Arial",
      "labelFontSize": 12,
      "labelColor": "#333"
    }
  }
}
