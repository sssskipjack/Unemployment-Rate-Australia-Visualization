{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia Unemployment Rate By State",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "https://raw.githubusercontent.com/sssskipjack/Unemployment-Rate-Australia-Visualization/main/js/georef-australia-state-millesime.json",
    "format": {"type": "topojson", "feature": "georef-australia-state-millesime"}
  },
  "transform": [
    {
      "calculate": "substring(datum.properties.ste_name, 2, length(datum.properties.ste_name) - 2)",
      "as": "ste_name_clean"
    },
    {
      "lookup": "ste_name_clean",
      "from": {
        "data": {
          "url": "data/unemploymentRate.csv"
        },
        "key": "ste_name",
        "fields": ["UnemploymentRate"]
      }
    },
    {
      "calculate": "toNumber(datum.UnemploymentRate)",
      "as": "UnemploymentRate_num"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "UnemploymentRate_num",
      "type": "quantitative",
      "scale": {"scheme": "reds"},
      "legend": {
        "title": "Unemployment Rate (%)",
        "format": ".1f"
      }
    },
    "tooltip": [
      {"field": "ste_name_clean", "type": "nominal", "title": "State"},
      {
        "field": "UnemploymentRate_num",
        "type": "quantitative",
        "title": "Unemployment Rate (%)",
        "format": ".1f"
      }
    ]
  }
}
