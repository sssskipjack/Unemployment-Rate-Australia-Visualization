{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Stacked Area Chart of Employment Metrics Over Time in Australia",
    "font": "Roboto",
    "fontSize": 16,
    "anchor": "middle",
    "color": "#333",
    "subtitle": " ",
    "subtitlePadding": 15
  },
  "width": 600,
  "height": 350,
  "description": "Stacked area chart of employment metrics over time in Australia",
  "data": {
    "url": "https://raw.githubusercontent.com/sssskipjack/Unemployment-Rate-Australia-Visualization/refs/heads/main/data/EmploymentInformationLong.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Value",
      "type": "quantitative",
      "title": "Number of People Surveyed",
      "axis": {
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "color": {
      "field": "Metric",
      "type": "nominal",
      "title": "Employment Metric",
      "scale": {
        "scheme": "blueorange"
      },
      "legend": {
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "order": {
      "field": "Metric",  
      "type": "nominal",
      "sort": "ascending"
    },
    "tooltip": [
      {
        "field": "Date",
        "type": "temporal",
        "title": "Year",
        "format": "%Y"
      },
      {
        "field": "Metric",
        "type": "nominal",
        "title": "Employment Metric"
      },
      {
        "field": "Value",
        "type": "quantitative",
        "title": "Number of people Surveyed"
      }
    ]
  }
}
